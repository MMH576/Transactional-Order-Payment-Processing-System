{
  "name": "transactional-order-system-backend",
  "version": "1.0.0",
  "description": "Production-grade transactional order and payment processing system",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "node ./node_modules/@nestjs/cli/bin/nest.js build",
    "start": "node ./node_modules/@nestjs/cli/bin/nest.js start",
    "start:dev": "node ./node_modules/@nestjs/cli/bin/nest.js start --watch",
    "start:debug": "node ./node_modules/@nestjs/cli/bin/nest.js start --debug --watch",
    "start:prod": "node dist/main",
    "test": "node ./node_modules/jest/bin/jest.js",
    "test:watch": "node ./node_modules/jest/bin/jest.js --watch",
    "test:cov": "node ./node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node ./node_modules/jest/bin/jest.js --testPathPattern=unit",
    "test:integration": "node ./node_modules/jest/bin/jest.js --testPathPattern=integration"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.20",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "node ./node_modules/ts-node/dist/bin.js prisma/seed.ts"
  }
}
